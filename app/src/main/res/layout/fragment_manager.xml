<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentManager2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:text="Enter everyday mess routine"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="#14111111"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="wrap_content"
                        android:maxLength="5"
                        android:id="@+id/etStartAt"
                        android:inputType="numberDecimal"
                        android:hint="Start at"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content"/>


                    <Spinner
                        android:id="@+id/spinnerStartAt"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="#14111111"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="wrap_content"
                        android:maxLength="5"
                        android:id="@+id/etCloseAt"
                        android:inputType="numberDecimal"
                        android:hint="Close at"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:fontFamily="@font/open_sans"
                        android:layout_height="wrap_content">

                    </EditText>

                    <Spinner
                        android:id="@+id/spinnerEndAt"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMessName"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/open_sans"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter mess canteen name"/>

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etItemName"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/open_sans"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter items that you providing" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOneTimePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/open_sans"
                    android:hint="Enter one time price" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMessLocation"
                    android:fontFamily="@font/open_sans"
                    android:layout_width="match_parent"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter mess location" />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMobileNumber"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:fontFamily="@font/open_sans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter mobile number" />
            </com.google.android.material.textfield.TextInputLayout>




            <RelativeLayout
                android:id="@+id/linerCreateMess"
                android:layout_width="match_parent"
                android:background="@drawable/d_create_mess_bg"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/add"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        app:tint="@color/white" />


                    <TextView
                        android:id="@+id/addMessParticulars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linearCreatingProfile"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <com.tuyenmonkey.mkloader.MKLoader
                    android:id="@+id/mkLoader"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    app:mk_color="@color/black"
                    app:mk_type="LineSpinner" />
                <TextView
                    android:text="Creating mess profile..."
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>