<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/rateMess"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgRate1"
            android:layout_width="20dp"
            android:src="@drawable/starx"
            android:layout_margin="5dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/imgRate2"
            android:layout_width="20dp"
            android:src="@drawable/starx"
            android:layout_margin="5dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/imgRate3"

            android:layout_width="20dp"
            android:src="@drawable/starx"
            android:layout_margin="5dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/imgRate4"
            android:layout_width="20dp"
            android:src="@drawable/starx"
            android:layout_margin="5dp"
            android:layout_height="20dp"/>
        <ImageView
            android:id="@+id/imgRate5"

            android:layout_width="20dp"
            android:src="@drawable/stary"
            android:layout_margin="5dp"
            android:layout_height="20dp"/>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etReview"
            android:layout_width="match_parent"
            android:fontFamily="@font/open_sans"
            android:layout_height="wrap_content"
            android:hint="add review"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:fontFamily="@font/open_sans"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:padding="15dp"
        android:background="@drawable/d_create_mess_bg"
        android:layout_height="wrap_content"/>
</LinearLayout>